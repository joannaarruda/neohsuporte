@model neohsuporte.Models.Hospital

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Hospital</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CnpjHospital" class="control-label"></label>
                <input asp-for="CnpjHospital" class="form-control" />
                <span asp-validation-for="CnpjHospital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NmHospital" class="control-label"></label>
                <input asp-for="NmHospital" class="form-control" />
                <span asp-validation-for="NmHospital" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HospitalGrupo" /> @Html.DisplayNameFor(model => model.HospitalGrupo)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SnAtivo" /> @Html.DisplayNameFor(model => model.SnAtivo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TipoSistema">Escolha o sistema:</label>
                <select asp-for="TipoSistema" class="form-control">
                    <option value="1">Desacoplado</option>
                    <option value="2">Soulmv</option>
                    <option value="3">MV2000</option>
                    <option value="4">Agfa</option>
                    <option value="5">Tasy</option>
                </select>
                
                <span asp-validation-for="TipoSistema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
